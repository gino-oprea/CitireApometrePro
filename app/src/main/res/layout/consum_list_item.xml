<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutListConsumItem"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:background="@drawable/consum_list_item_selector"
    android:descendantFocusability="blocksDescendants">    
    
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="horizontal">
	<LinearLayout android:id="@+id/layoutLeftGroup"
	    android:layout_width="100dp"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:background="@color/colorPrimary">
        <TextView 
	    android:id="@+id/lblData"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="Data"
	    android:textStyle="bold"
		android:textColor="@color/white"
	    android:paddingLeft="5dp"/>
        <TextView 
	    android:id="@+id/lblTotal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/Total"
		android:textColor="@color/white"
	    android:paddingLeft="5dp"/>
        <TextView 
	    android:id="@+id/lblConsumLuna"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/list_consum_left_bottom"
	    android:text="@string/Consum"
		android:textColor="@color/white"
	    android:paddingLeft="5dp"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/layoutRightGroup"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	<ListView 
	    android:id="@+id/listConsumItem"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:listSelector="@android:color/transparent"
	    android:cacheColorHint="@android:color/transparent"/>
	<LinearLayout android:id="@+id/LayoutTotal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <View android:layout_height="0dp"
	        android:layout_width="100dp"/>
	<LinearLayout android:id="@+id/subLayoutTotal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">    
	    
	    <TextView 
	    android:id="@+id/lblTotalCalda"
	    android:layout_width="70dp"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:textColor="#FF0000"
	    android:text="TotalCalda"/>
	    <TextView 
	    android:id="@+id/lblTotalRece"
	    android:layout_width="70dp"
	    android:layout_height="wrap_content"
	    android:textStyle="bold"
	    android:textColor="@color/colorPrimary"
	    android:text="TotalRece"/>	    
	</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/LayoutConsum"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	<View android:layout_height="wrap_content"
	        android:layout_width="100dp"
	        android:background="@drawable/total_consum_selector"/>
	<LinearLayout android:id="@+id/subLayoutConsum"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@drawable/total_consum_selector">    
	    
	    <TextView 
	    android:id="@+id/lblConsumCaldaLuna"
	    android:layout_width="70dp"
	    android:layout_height="wrap_content"    
	    android:textColor="#FF0000"
	    android:text="ConsumCalda"/>
	    <TextView 
	    android:id="@+id/lblConsumReceLuna"
	    android:layout_width="70dp"
	    android:layout_height="wrap_content"    
	    android:textColor="@color/colorPrimary"
	    android:text="ConsumRece"/>    
	</LinearLayout>
	</LinearLayout>
	</LinearLayout>
</LinearLayout>
	
	
</LinearLayout>

