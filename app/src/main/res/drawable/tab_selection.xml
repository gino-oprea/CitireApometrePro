<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" >
        <shape>
            <solid
                android:color="#90D8D4" />
            <stroke
                android:width="1dp"
                android:color="#1DA099" />           
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#90D8D4"
                android:endColor="#1DA099"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#90D8D4" />
            
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>